{
    "extends": "./tsconfig.options.json",
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2023", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "outDir": ".cache/tsc/workspace/test",
      "moduleResolution": "Bundler",
      "types": [
        "node",
        "vitest/globals",
        "vitest",
        "@testing-library/jest-dom"
      ],
    },
    "exclude": [
      "**/node_modules/**/*",
      "tests/artifacts/**/*",
      "dist/**/*",
    ],
    "include": [
      "tests/**/*",
      ".*/**/*.test.ts",
      ".*/**/*.test.tsx",
      "**/*.test.ts",
      "**/*.test.tsx",
    ],
    "references": [
      {
        "path": "./tsconfig.lib.json"
      },
    ]
  }