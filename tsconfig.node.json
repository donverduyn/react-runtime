{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": ".cache/tsc/workspace/node",
    "allowJs": true,
    "types": ["node"]
  },
  "exclude": [
    "examples/**/*",
    "packages/**/*",
    "node_modules/**/*",
    "dist/**/*"
  ],
  "include": ["*.ts"]
}
