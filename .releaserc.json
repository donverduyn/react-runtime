{
  "branches": ["master"],
  "npmPublish": true,
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "chore", "release": "patch" },
          { "type": "docs", "release": "patch" },
          { "type": "fix", "release": "patch" },
          { "type": "feat", "release": "minor" },
          { "type": "perf", "release": "patch" },
          { "type": "ci", "release": "patch" },
          { "type": "build", "release": "patch" },
          { "type": "security", "release": "patch" },
          { "breaking": true, "release": "major" }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/npm",
      {
        "pkgRoot": "packages/react-runtime"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "packages/react-runtime/dist/index.cjs.js",
            "name": "react-runtime/index.cjs.js"
          },
          {
            "path": "packages/react-runtime/dist/index.esm.js",
            "name": "react-runtime/index.esm.js"
          },
          {
            "path": "packages/react-runtime/dist/index.esm.min.js",
            "name": "react-runtime/index.esm.min.js"
          },
          {
            "path": "packages/react-runtime/dist/index.d.ts",
            "name": "react-runtime/index.d.ts"
          },
          {
            "path": "packages/react-runtime/dist/**/*.d.ts",
            "name": "react-runtime/[name]" 
          },
          {
            "path": "packages/react-runtime/dist/**/*.map",
            "name": "react-runtime/[name]"
          },
          {
            "path": "packages/react-runtime/dist/**/*.tsbuildinfo",
            "name": "react-runtime/[name]"
          }
        ]
      }
    ]
  ]
}
