{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "outDir": "dist"
  },
  "include": ["index.ts", "src/**/*", "src/**/*.json"],
  "exclude": [
    "**/node_modules/**/*",
    "dist/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/.*/**/*.test.ts",
    "**/.*/**/*.test.tsx"
  ]
}
